<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppGallery.XamarinForms.Estilizacao.EstiloMaterial">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Material Design" />

            <Frame Margin="10">
                <StackLayout>
                    <Button Text="Teste" />
                    <CheckBox />
                    <Entry Placeholder="Entry" />
                    <Editor Placeholder="Editor" />
                    <DatePicker />
                    <TimePicker />
                    <Picker Title="Picker" />
                    <ProgressBar Progress="0.5" />
                    <ActivityIndicator IsRunning="True" />
                    <Stepper />
                    <Slider Minimum="0" Maximum="5" Value="3" />
                </StackLayout>
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>