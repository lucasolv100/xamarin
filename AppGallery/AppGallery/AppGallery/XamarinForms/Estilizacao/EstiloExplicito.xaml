<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppGallery.XamarinForms.Estilizacao.EstiloExplicito">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="EstiloBotao" TargetType="Button">
                <Setter Property="BackgroundColor" Value="Accent" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="Margin" Value="10" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    
    
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Estilo Explicito" />
            <Button Text="Botão 01" Style="{StaticResource EstiloBotao}" />
            <Button Text="Botão 02" Style="{StaticResource EstiloBotao}" />
            <Button Text="Botão 03" Style="{StaticResource EstiloBotao}" />
            <Button Text="Botão 04" Style="{StaticResource EstiloBotao}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>