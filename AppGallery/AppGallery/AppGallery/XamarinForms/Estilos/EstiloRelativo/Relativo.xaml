<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppGallery.XamarinForms.Estilos.EstiloRelativo.Relativo">
    <ContentPage.Content>
        <RelativeLayout>
            <BoxView HeightRequest="150" x:Name="backGround" BackgroundColor="Gray" RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent,Property=Width}" />
            <BoxView HeightRequest="100" BackgroundColor="Black" WidthRequest="100"
                     RelativeLayout.XConstraint="{ConstraintExpression Type=RelativeToView,ElementName=backGround, Property=Width, Factor=0.5,Constant=-40}"
                     RelativeLayout.YConstraint="{ConstraintExpression Type=RelativeToView,ElementName=backGround, Property=Height, Factor=0.7,Constant=5}"
                     />
        </RelativeLayout>
    </ContentPage.Content>
</ContentPage>