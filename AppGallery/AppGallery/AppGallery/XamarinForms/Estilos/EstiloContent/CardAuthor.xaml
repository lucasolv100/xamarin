<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppGallery.XamarinForms.Estilos.EstiloContent.CardAuthor"
             x:Name="componenteAuthor">
  <ContentView.Content>
      <StackLayout Orientation="Horizontal" Spacing="0" BindingContext="{x:Reference componenteAuthor}">
            <BoxView WidthRequest="100" HeightRequest="100" Color="{Binding BVColor}" />
            <StackLayout BackgroundColor="Black" HorizontalOptions="FillAndExpand">
                <Label Text="{Binding Nome}" FontSize="24" TextColor="White" />
                <Label Text="{Binding Descricao}" FontSize="18" TextColor="White" />
            </StackLayout>
        </StackLayout>
  </ContentView.Content>
</ContentView>