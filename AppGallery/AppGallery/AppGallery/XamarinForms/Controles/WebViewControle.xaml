<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppGallery.XamarinForms.Controles.WebViewControle"
             Padding="10">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Frame BorderColor="Gray" Padding="1">
                    <WebView HorizontalOptions="FillAndExpand" HeightRequest="300" Source="https://www.google.com"></WebView>
                </Frame>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>