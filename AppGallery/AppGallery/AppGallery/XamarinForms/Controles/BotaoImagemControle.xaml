<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppGallery.XamarinForms.Controles.BotaoImagemControle">
    <ContentPage.Content>
        <StackLayout Padding="20">
            <ImageButton
                Source="plane.png"
                BackgroundColor="White"
                BorderColor="Black"
                BorderWidth="2"
                HorizontalOptions="Center"
                Padding="5"
                />

            <ImageButton
                Source="plane.png"
                BackgroundColor="White"
                BorderColor="Black"
                BorderWidth="2"
                HorizontalOptions="Center"
                WidthRequest="200"
                HeightRequest="140"
                Aspect="AspectFit"
                />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>