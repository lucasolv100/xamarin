<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppGallery.XamarinForms.Controles.IndicadorAtividadeControle"
             Padding="10">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Activity Indicator" />
            <ActivityIndicator IsRunning="True" Color="Green" />

            <Label Text="Progress Bar" />
            <ProgressBar ProgressColor="Green" x:Name="BRProgresso" />

            <Button x:Name="Processar" Text="Processar 10%" Clicked="Processar_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>