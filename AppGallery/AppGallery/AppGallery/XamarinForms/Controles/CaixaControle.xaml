<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppGallery.XamarinForms.Controles.CaixaControle">
    <ContentPage.Content>
        <StackLayout>
            <BoxView BackgroundColor="Black" HorizontalOptions="Center" WidthRequest="100" HeightRequest="100" />

            <BoxView BackgroundColor="Black" HorizontalOptions="Center" WidthRequest="200" HeightRequest="100" />

            <BoxView BackgroundColor="Black" HorizontalOptions="FillAndExpand" WidthRequest="1" HeightRequest="1" />

            <BoxView BackgroundColor="Black" CornerRadius="100" HorizontalOptions="Center" WidthRequest="100" HeightRequest="100" />

            <BoxView BackgroundColor="Black" CornerRadius="10" HorizontalOptions="Center" WidthRequest="100" HeightRequest="100" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>