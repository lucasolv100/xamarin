                        <Button Text="Dynamic Style" Clicked="AbrirDynamicStyle" />
                        <Button Text="Style Class" Clicked="AbrirStyleClass" />
                        <Button Text="Visual State Manager" Clicked="AbrirVisualStateManager" />
                        <Button Text="Material Design" Clicked="AbrirMD" />
                    </StackLayout>
                </ScrollView>
            </ContentPage.Content>
        </ContentPage>
    </MasterDetailPage.Master>
    <MasterDetailPage.Detail>
        <local:Inicio />
