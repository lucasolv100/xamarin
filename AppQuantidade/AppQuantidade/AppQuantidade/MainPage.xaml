<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppQuantidade.MainPage">

    <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="50">
        <Label Text="Quantidade" FontSize="20" HorizontalTextAlignment="Center" />
        <Label x:Name="Qtd"  Text="1" FontSize="48" TextColor="Red" HorizontalTextAlignment="Center" />
        <StackLayout Orientation="Horizontal" Spacing="40">
            <Button x:Name="btnMais" Clicked="btnMais_Clicked" Text="+" Background="#fff" BorderColor="#707070" BorderWidth="1" FontSize="30" WidthRequest="70" HeightRequest="70" />
            <Button x:Name="btnMenos" Clicked="btnMenos_Clicked" Text="-" Background="#fff" BorderColor="#707070" BorderWidth="1" FontSize="30" WidthRequest="70" HeightRequest="70" />
        </StackLayout>
    </StackLayout>

</ContentPage>
